<!-- Modal -->
<div class="modal fade" id="menuModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><strong>Daftar Menu</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @scheduled_product.each do |scheduledproduct| %>
        	<div class='container'>
        		<div class="row">
	      			<div class='col-6'>
	        			<%= image_tag(scheduledproduct.product.link, :alt => "menuprofile", :class => "d-block w-100") %>
	        		</div>
	        		<div class='col-6'>
		       			<h3 style="text-transform: capitalize;"><strong><%= scheduledproduct.product.name %></strong></h3>
	        			<p><%= number_to_currency(scheduledproduct.product.price, unit: "Rp ") %></p>
	        		</div>
	        	</div>
        	</div>
        	<br>
	    <% end %>
      </div>
      <div class="modal-footer">
      	<% if @id!=-1 %>
      	<%= link_to 'Ikut Preorder', register_home_path(@id), class:'btn btn-primary' %>
      	<% end %>
      </div>
    </div>
  </div>
