<!-- Modal -->
<div class="modal fade" id="menuModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><strong>Daftar Menu</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @scheduled_product.each do |scheduledproduct| %>
        	<%= image_tag(scheduledproduct.product.link, :alt => "menuprofile", :class => "d-block w-100") %>
	       	<h4><strong><%= scheduledproduct.product.name %></strong></h4>
        	<p><%= number_to_currency(scheduledproduct.product.price, unit: "Rp ") %></p>
        	<br>
	    <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Ikut Preorder</button>
      </div>
    </div>
  </div>
