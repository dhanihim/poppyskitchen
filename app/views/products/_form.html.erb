<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :name, class:'form-control', placeholder:'Name of the product', required:'true', autocomplete:'off' %>
  </div>

  <div class="field form-group">
    <%= form.text_field :link, class:'form-control', placeholder:'Link', autocomplete:'off' %>
  </div>

  <div class="field form-group">
    <%= form.number_field :cost, class:'form-control', placeholder:'Cost of the product', required:'true', autocomplete:'off' %>
  </div>

  <div class="field form-group">
    <%= form.number_field :price, class:'form-control', placeholder:'Price of the product', required:'true', autocomplete:'off' %>
  </div>

  <div class="field form-group">
    <%= form.text_field :description, class:'form-control', placeholder:'Description', autocomplete:'off' %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary'%>
  </div>
<% end %>
