<h1>Products</h1>

<br>

<div class="table-responsive">
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Cost</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3" style="width:10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td style='text-transform:capitalize;'><%= product.name %></td>
        <td><%= product.link %></td>
        <td><%= product.cost %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Product', new_product_path, class:'btn btn-primary' %>
