<%= form_with(model: visitor) do |form| %>
  <% if visitor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(visitor.errors.count, "error") %> prohibited this visitor from being saved:</h2>

      <ul>
        <% visitor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, class:'form-control', placeholder:'Name of the visitor', required:'true', autocomplete:'off', style:'text-transform:capitalize;' %>
  </div>

  <div class="form-group">
    <%= form.number_field :phone, class:'form-control', placeholder:'Phone of the visitor', required:'true', autocomplete:'off' %>
  </div>

  <div class="form-group">
    <%= form.text_field :address, class:'form-control', placeholder:'Address of the visitor', required:'true', autocomplete:'off', style:'text-transform:capitalize;' %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
