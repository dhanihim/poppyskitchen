<h1>Scheduled Products</h1>

<br>

<div class="table-responsive">
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Schedule ID</th>
      <th>Product Name</th>
      <th colspan="3" style="width:10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_products.each do |scheduled_product| %>
      <tr>
        <td><%= scheduled_product.schedule_id %></td>
        <td><%= scheduled_product.product.name %></td>
        <td><%= link_to 'Edit', edit_scheduled_product_path(scheduled_product), class:'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', scheduled_product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
